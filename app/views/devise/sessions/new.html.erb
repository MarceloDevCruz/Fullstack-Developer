<div class="min-vh-100 d-flex align-items-center justify-content-center">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <h2 class="card-title mb-4"><%= t('views.devise.sessions.new.sign_in') %></h2>
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { data: { turbo: false } }) do |f| %>
              <%= f.error_notification %>
              <div class="mb-3">
                <%= f.input :email, required: true, autofocus: true, input_html: { class: "form-control", autocomplete: "email" } %>
              </div>
              <div class="mb-3">
                <%= f.input :password, required: true, input_html: { class: "form-control", autocomplete: "current-password" } %>
              </div>
              <% if devise_mapping.rememberable? %>
                <div class="form-check mb-3">
                  <%= f.input :remember_me, as: :boolean, label: t('views.devise.shared.links.remember_me', default: 'Lembrar-me'), input_html: { class: "form-check-input" }, label_html: { class: "form-check-label " } %>
                </div>
              <% end %>
              <div class="d-grid">
                <%= f.button :submit, t('views.devise.sessions.new.button.submit'), class: "btn btn-primary" %>
              </div>
            <% end %>
            <div class="mt-3">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>